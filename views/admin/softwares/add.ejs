<%- include('../include/header') %>
<section class="content-header">
    <h1>
        Dashboard
        <small>Control panel</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-success">
                <div class="box-header">
                    <h4 class="box-title"><%= title %></h4>
                </div>
                <form class="box-body" method="post" sbform="true" saveid="#action_data" url="admin_action/add_softwares">
                    <% if(is_enc == true){ %>
                        <input type="hidden" name="enc_id" value="<%= enc_data.id %>">
                    <% } %>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" placeholder="Name" name="name" value="<% if(is_enc == true){ %><%= enc_data.name; %><% } %>">
                    </div>
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" placeholder="Username" name="username" value="<% if(is_enc == true){ %><%= enc_data.username; %><% } %>">
                    </div>
                    <div class="form-group">
                        <label>Purpose</label>
                        <input type="text" class="form-control" placeholder="Purpose" name="purpose" value="<% if(is_enc == true){ %><%= enc_data.purpose; %><% } %>">
                    </div>
                    <div class="form-group">
                        <label>Version</label>
                        <input type="text" class="form-control" placeholder="Version" name="version" value="<% if(is_enc == true){ %><%= enc_data.version; %><% } %>">
                    </div>
                    <div class="form-group">
                        <label>Filename</label>
                        <input type="text" class="form-control" placeholder="Filename" name="filename" value="<% if(is_enc == true){ %><%= enc_data.filename; %><% } %>">
                    </div>
                    <div class="form-group">
                        <label>Status</label>
                        <select class="form-control" name="status" required>
                            <option <% if(is_enc == true){ %><% if (enc_data.status == '1') {  __append('selected=""') } %> <% } %> value="1">Active</option>
                            <option <% if(is_enc == true){ %><% if (enc_data.status == '0') { __append('selected=""') } %> <% } %> value="0">Inactive</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success"><%= title %></button>
                    </div>
                    <div class="form-group">
                        <div id="action_data"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include('../include/footer') %>
<script>
    function select_server_type(e){
        let s_value = e.value;
        let server_data = ['smtp','elastic'];
        for(var a_data of server_data){
            document.querySelector("#"+a_data).style.display = 'none';
        }
        if (s_value == 'smtp') {
            document.querySelector("#smtp").style.display = 'block';
        }
        if (s_value == 'elastic') {
            document.querySelector("#elastic").style.display = 'block';
        }
        if (s_value == 'sendgrid') {
            document.querySelector("#sendgrid").style.display = 'block';
        }
    }
</script>